<html>

<head>
    {{>require_top}}
    <link rel="stylesheet" href="css/styles.css">
    <link rel="icon" href="images/weather.png">
    <script>
        function showPulse() {
            var btn = document.getElementById('searchBtn')
            btn.classList.add('pulse')
        }
        function removePulse() {
            var btn = document.getElementById('searchBtn')
            btn.classList.remove('pulse')
        }
        function checkInput() {
            var input = document.getElementById('searchInput')
            if (input.value == '') {
                removePulse();
            }
            else {
                showPulse();
            }
        }
    </script>
    <title>Home Page</title>
</head>

<body>
    <div class="main-content container">
        {{>header}}
        <br>
        <div class="row" id="weatherRow">
            <p>Use this site to get your weather!</p>
            <form action="">
                <div class="input-field col s9">
                    <input type="text" id="searchInput" oninput="checkInput()" placeholder="eg: Ahmedabad">
                </div>
                <div class="input-field col s3">
                    <button id="searchBtn" class="btn-floating btn-large yellow darken-1"><i
                            class="material-icons">cloud</i></button>
                </div>
            </form>
            <b id="message-1"></b><br>
            <b id="message-2"></b>
        </div>
    </div>


    {{>footer}}
    {{>require_bottom}}
    <script src="js/app.js"></script>
</body>

</html>